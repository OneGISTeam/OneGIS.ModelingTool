#ifndef OSGEARTH_DRIVER_ARCGIS_DRIVEROPTIONS
#define OSGEARTH_DRIVER_ARCGIS_DRIVEROPTIONS 1

#include <VBF_3DMap/VBF_Terrain/Common.h>
#include <VBF_3DMap/VBF_Terrain/VBF_SourceTile.h>
#include <VBF_3DMap/VBF_Terrain/URI.h>

namespace osgEarth { namespace Drivers
{
    using namespace osgEarth;

    class ArcGISOptions : public CVBF_OptionsDriverSourceTile // NO EXPORT; header only
    {
    public:
        CVBF_Optional<URI>& url() { return _url; }
        const CVBF_Optional<URI>& url() const { return _url; }

        CVBF_Optional<std::string>& token() { return _token; }
        const CVBF_Optional<std::string>& token() const { return _token; }

    public:
        ArcGISOptions( const CVBF_OptionsDriverSourceTile& opt =CVBF_OptionsDriverSourceTile() ) : CVBF_OptionsDriverSourceTile( opt )
        {
            setDriver( "arcgis" );
            fromConfig( m_conf );
        }

        /** dtor */
        virtual ~ArcGISOptions() { }

    public:
        CVBF_Config getConfig() const {
            CVBF_Config conf = CVBF_OptionsDriverSourceTile::getConfig();
            conf.updateIfSet("url", _url );
            conf.updateIfSet("token", _token );
            return conf;
        }

        void mergeConfig( const CVBF_Config& conf ) {
            CVBF_OptionsDriverSourceTile::mergeConfig( conf );
            fromConfig( conf );
        }

        void fromConfig( const CVBF_Config& conf ) {
            conf.getIfSet( "url", _url );
            conf.getIfSet( "token", _token);
        }

    private:
        CVBF_Optional<URI>         _url;
        CVBF_Optional<std::string> _token;
    };

} } // namespace osgEarth::Drivers

#endif // OSGEARTH_DRIVER_ARCGIS_DRIVEROPTIONS

